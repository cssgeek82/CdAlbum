@model CdAlbum.Models.Album

@{
    ViewData["Title"] = "Lägg till ny";
}

<h2>Lägg till album</h2>

<div class="addNew">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="valid"></div>
            <div class="form">
                <label asp-for="Artist" class="formLabel"></label>
                <input asp-for="Artist" class="formInput" />
                <span asp-validation-for="Artist" class="valid"></span>
            </div>
            <div class="form">
                <label asp-for="AlbumName" class="formLabel"></label>
                <input asp-for="AlbumName" class="formInput" />
                <span asp-validation-for="AlbumName" class="valid"></span>
            </div>
            <div class="form">
                <label asp-for="ReleaseYear" class="formLabel"></label>
                <input asp-for="ReleaseYear" class="formInput" />
                <span asp-validation-for="ReleaseYear" class="valid"></span>
            </div>
            <div class="addBtn">
                <input type="submit" value="Lägg till" class="btn btnCreate btnAdd" />
            </div>
        </form>
    </div>
</div>

<div class="back">
    <a asp-action="Index">&larr; Tillbaka</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
